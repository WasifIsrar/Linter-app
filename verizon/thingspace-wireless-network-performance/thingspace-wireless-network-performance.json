{
  "openapi": "3.0.1",
  "info": {
    "title": "Wireless Network Performance (WNP)",
    "description": "ThingSpace Intelligence is an offering of integrated connectivity and service management. Wireless Network Performance APIs are available to ThingSpace Intelligence subscribers. You can use this link to <a href=\"/content/dam/thingspace-portal/resources/documentation/swagger/Wireless_Network_Performance.json\" download>download the JSON file</a>",
    "license": {
      "name": "Verizon Terms of Service",
      "url": "http://www.verizon.com/about/terms/"
    },
